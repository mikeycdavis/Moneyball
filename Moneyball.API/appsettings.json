{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=Moneyball;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "SportsData": {
    "ApiKey": "YOUR_SPORTRADAR_API_KEY",
    "BaseUrl": "https://api.sportradar.com/nba/trial/v8/en"
  },
  "OddsAPI": {
    "ApiKey": "YOUR_ODDS_API_KEY",
    "BaseUrl": "https://api.the-odds-api.com/v4"
  },
  "DataIngestion": {
    "EnableBackgroundService": true,
    "UpdateIntervalHours": 1
  }
}